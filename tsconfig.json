{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitAny": true
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
